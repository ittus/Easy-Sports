<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gec.easysports"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">


            <com.cengalabs.flatui.views.FlatTextView
                android:layout_width="0dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name: "
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />

            <com.cengalabs.flatui.views.FlatEditText
                android:id="@+id/etName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:hint="Enter event name"
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <com.cengalabs.flatui.views.FlatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enter Date: "
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />

            <com.cengalabs.flatui.views.FlatEditText
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:editable="false"
                android:hint="Set date"
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <com.cengalabs.flatui.views.FlatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enter Time: "
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />

            <com.cengalabs.flatui.views.FlatEditText
                android:id="@+id/tvTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:editable="false"
                android:hint="Set Time"
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <com.cengalabs.flatui.views.FlatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Category: "
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />

            <Spinner
                android:id="@+id/spinCateogory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <com.cengalabs.flatui.views.FlatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location: "
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />

            <com.cengalabs.flatui.views.FlatEditText
                android:id="@+id/tvLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:editable="false"
                android:hint="Set Location"
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llSuggestion"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <com.cengalabs.flatui.views.FlatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Suggest: "
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />

            <Spinner
                android:id="@+id/spinLocationSuggestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"></Spinner>

            <com.gec.easysports.font.RobotoTextView
                android:id="@+id/rtvViewSuggest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/transparent_button_selector"
                android:text="View"
                android:textColor="@color/main_color_500"
                android:textSize="14sp"
                app:typeface="robotoMedium" />

            <com.gec.easysports.font.RobotoTextView
                android:id="@+id/rtvUseIt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/transparent_button_selector"
                android:text="Use"
                android:textColor="@color/main_color_500"
                android:textSize="14sp"
                app:typeface="robotoMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <com.cengalabs.flatui.views.FlatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="People: "
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />

            <com.cengalabs.flatui.views.FlatEditText
                android:id="@+id/etNumberPeople"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:editable="false"
                android:inputType="number"
                android:text="10"
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <com.cengalabs.flatui.views.FlatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Description: "
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <com.cengalabs.flatui.views.FlatEditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:minLines="3"
                android:text="My Description"
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.cengalabs.flatui.views.FlatButton
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                flatui:fl_blockButtonEffectHeight="3dp"
                flatui:fl_touchEffect="fl_ripple" />


        </LinearLayout>


    </LinearLayout>
</ScrollView>