<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.gec.easysports"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_background_white"
        android:minHeight="340dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/google_cards_background_top"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/list_item_google_cards_social_profile_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.gec.easysports.font.RobotoTextView
                    android:id="@+id/list_item_google_cards_social_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="\@Le Duy Khanh"
                    android:textColor="@color/main_color_grey_600"
                    android:textSize="16sp"
                    app:typeface="robotoLight" />

                <com.gec.easysports.font.RobotoTextView
                    android:id="@+id/list_item_google_cards_social_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reputation (1)"
                    android:textColor="@color/main_color_grey_400"
                    android:textSize="12sp"
                    app:typeface="robotoLight" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivGame"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:contentDescription="@string/cd_main_image"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/google_cards_background_bottom"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <com.gec.easysports.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="Category: "
                    android:textColor="@color/material_blue_grey_700"
                    android:textSize="16sp"
                    app:typeface="robotoRegular" />

                <com.gec.easysports.font.RobotoTextView
                    android:id="@+id/tvCategoryView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="@string/lorem_ipsum_long"
                    android:textColor="@color/material_blue_grey_700"
                    android:textSize="16sp"
                    app:typeface="robotoRegular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.gec.easysports.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="Event: "
                    android:textColor="@color/material_blue_grey_700"
                    android:textSize="16sp"
                    app:typeface="robotoRegular" />

                <com.gec.easysports.font.RobotoTextView
                    android:id="@+id/tvNameView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="@string/lorem_ipsum_long"
                    android:textColor="@color/material_blue_grey_700"
                    android:textSize="16sp"
                    app:typeface="robotoRegular" />
            </LinearLayout>


            <com.gec.easysports.font.RobotoTextView
                android:id="@+id/rtvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:text="@string/lorem_ipsum_long"
                android:textColor="@color/material_blue_grey_700"
                android:textSize="16sp"
                app:typeface="robotoRegular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.gec.easysports.font.RobotoTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:maxLines="2"
                    android:text="Number of people: "
                    android:textColor="@color/material_blue_grey_700"
                    android:textSize="16sp"
                    app:typeface="robotoRegular" />

                <com.gec.easysports.font.RobotoTextView
                    android:id="@+id/tvNumPlayer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:maxLines="2"
                    android:text="@string/lorem_ipsum_long"
                    android:textColor="@color/material_blue_grey_700"
                    android:textSize="16sp"
                    app:typeface="robotoRegular" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main_color_500" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <com.gec.easysports.font.RobotoTextView
                    android:id="@+id/rtvRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/transparent_button_selector"
                    android:padding="8dp"
                    android:text="REGISTER"
                    android:textColor="@color/main_color_500"
                    android:textSize="14sp"
                    app:typeface="robotoMedium" />

                <com.gec.easysports.font.RobotoTextView
                    android:id="@+id/rtvReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/transparent_button_selector"
                    android:padding="8dp"
                    android:text="REPORT"
                    android:textColor="@color/main_color_500"
                    android:textSize="14sp"
                    app:typeface="robotoMedium" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <com.cengalabs.flatui.views.FlatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date: "
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />

            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/tvDateView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <com.cengalabs.flatui.views.FlatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time: "
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />

            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/tvTimeView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <com.cengalabs.flatui.views.FlatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location: "
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />

            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/tvLocationView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                flatui:fl_fontFamily="roboto"
                flatui:fl_theme="@array/grape" />


            <com.cengalabs.flatui.views.FlatButton
                android:id="@+id/btnViewOnMap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="8dp"
                android:text="View"
                flatui:fl_blockButtonEffectHeight="3dp"
                flatui:fl_touchEffect="fl_ripple" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>