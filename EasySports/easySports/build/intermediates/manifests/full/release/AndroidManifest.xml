<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gec.easysports"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gec.easysports.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gec.easysports.ParallaxKenBurnsActivity"
            android:theme="@style/AppTheme.Overlay" />
        <activity android:name="com.gec.easysports.ParallaxActivity" />
        <activity android:name="com.gec.easysports.ParallaxTravelActivity" />
        <activity android:name="com.gec.easysports.ParallaxSocialActivity" />
        <activity
            android:name="com.gec.easysports.ImageGalleryCategoryActivity"
            android:theme="@style/AppTheme.NoShadow" />
        <activity
            android:name="com.gec.easysports.ImageGallerySubcategoryActivity"
            android:theme="@style/AppTheme.NoShadow" />
        <activity
            android:name="com.gec.easysports.LogInPageActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gec.easysports.RegisterPageActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.gec.easysports.SplashScreensActivity" />
        <activity android:name="com.gec.easysports.ListViewsActivity" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>